<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/my_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myImg"
        android:src="@drawable/cycling_app"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:background="#00fff883"
        android:scaleType="centerCrop"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_marginStart="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Push Ups"
        android:id="@+id/exc_name"
        android:textSize="17dp"
        android:textAlignment="center"
        android:background="#9157d248"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/myImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="200 Cal"
        android:id="@+id/exc_cal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:singleLine="false"
        android:textSize="13sp"
        android:background="#a0272824"
        android:textColor="#f3f4ff"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:layout_below="@+id/exc_name"
        android:layout_toEndOf="@+id/myImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100 Reps"
        android:id="@+id/exc_reps"
        android:textAlignment="center"
        android:textStyle="bold"
        android:singleLine="false"
        android:textSize="13dp"
        android:background="#a0272824"
        android:textColor="#f3f4ff"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp"
        android:layout_below="@+id/exc_cal"
        android:layout_toEndOf="@+id/myImg" />

</RelativeLayout>